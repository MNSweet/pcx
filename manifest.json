{
	"manifest_version": 3,
	"name": "PRINCE | Validation & Quality Control",
	"version": "1.0",
	"description": "A suite of background checks to assist in the Validation and Quality Control of Accessioning; aimed to identify errors as they occur.",
	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"scripting",
		"clipboardRead",
		"clipboardWrite",
		"notifications",
		"unlimitedStorage",
		"sidePanel",
		"contextMenus",
		"webNavigation"
	],
	"icons": {
		"16": "icons/default-icon-16.png",
		"48": "icons/default-icon-48.png",
		"128": "icons/default-icon-128.png"
	},
	"background": {
		"type": "module",
		"service_worker": "js/serviceworker/Background.js"
	},
	"side_panel": {
		"default_path": "SidePanel.html",
		"enabled": "true"
	},
	"action": {
		"default_icon": {
			"16": "icons/default-icon-16.png",
			"48": "icons/default-icon-48.png",
			"128": "icons/default-icon-128.png"
		},
		"default_title": "PXC"
	},
	"content_scripts": [
		{
			"matches": [
				"https://prince.iatserv.com/*",
				"https://reliable.iatserv.com/*",
				"https://pnc.dxresults.com/*"
			],
			"js": [
				"js/modules/helpers/Logger.js",
				"js/modules/helpers/DOMHelper.js",
				"js/modules/PCX.js",
				"js/lims/LIMS.js",
				"js/modules/MessageRouter.js",
				"js/modules/helpers/QAManager.js",
				"js/modules/helpers/AsyncHelpers.js",
				"js/modules/helpers/Data.js",
				"js/modules/helpers/DOMObserver.js",
				"js/modules/helpers/KeyBinding.js",
				"js/modules/helpers/Settings.js",
				"js/modules/helpers/TableEnhancer.js",
				"js/modules/helpers/Utils.js",
				"js/modules/helpers/PageDataManager.js"
			],
			"css":["css/modal.css","css/Logger.css"],
			"run_at": "document_end",
			"all_frames": true
		},
		{
			"matches": ["https://prince.iatserv.com/*"],
			"js": [
				"js/lims/IATSERV.js",
				"js/labs/LabPL.js"
			],
			"css": ["css/content_pl.css"],
			"run_at": "document_end",
			"all_frames": true
		},
		{
			"matches": ["https://reliable.iatserv.com/*"],
			"js": [
				"js/lims/IATSERV.js",
				"js/labs/LabRR.js"
			],
			"css": ["css/content_rr.css"],
			"run_at": "document_end",
			"all_frames": true
		},
		{
			"matches": ["https://pnc.dxresults.com/*"],
			"js": [
				"js/lims/DXRESULTS.js",
				"js/labs/LabPD.js"
			],
			"css": ["css/content_pd.css"],
			"run_at": "document_end",
			"all_frames": true
		}
	],
	"host_permissions": [
		"https://prince.iatserv.com/",
		"https://reliable.iatserv.com/",
		"https://pnc.dxresults.com/"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"css/*.css",
				"js/labs/*.js",
				"js/libs/*.js",
				"js/lims/*.js",
				"js/modules/*.js",
				"js/modules/helpers/*.js",
				"js/modules/patientTransfer/*.js",
				"js/data/*.js",
				
				"js/serviceworker/*.js",
				"js/serviceworker/SidePanelTemplates/*.html",
				"js/serviceworker/SidePanelTemplates/DXRESULTS/*.html",
				"js/serviceworker/SidePanelTemplates/IATSERV/*.html",
				"js/serviceworker/SidePanelTemplates/Loading/*.html",
				"js/serviceworker/SidePanelTemplates/OutOfScope/*.html"
			],
			"matches": [
				"https://prince.iatserv.com/*",
				"https://reliable.iatserv.com/*",
				"https://pnc.dxresults.com/*"
			]
		}
	]
}

{
  "manifest_version": 3,
  "name": "PRINCE | Validation & Quality Control",
  "version": "1.0",
  "description": "A suite of background checks to assist in the Validation and Quality Control of Accessioning; aimed to identify errors as they occur.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite",
    "notifications"
  ],
  "icons": {
    "16": "icons/default-icon-16.png",
    "48": "icons/default-icon-48.png",
    "128": "icons/default-icon-128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/default-icon-16.png",
      "48": "icons/default-icon-48.png",
      "128": "icons/default-icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://prince.iatserv.com/*"],
      "js": ["js/pcx/pcx_controller.js", "js/pcx/qa_manager.js", "js/lims/iatserv.js", "js/labs/lab_pl.js"],
      "css": ["css/content_pl.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://reliable.iatserv.com/*"],
      "js": ["js/pcx/pcx_controller.js", "js/pcx/qa_manager.js", "js/lims/iatserv.js", "js/labs/lab_rr.js"],
      "css": ["css/content_rr.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://pnc.dxresults.com/*"],
      "js": ["js/pcx/pcx_controller.js", "js/pcx/qa_manager.js", "js/lims/dxresults.js", "js/labs/lab_pd.js"],
      "css": ["css/content_pd.css"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://prince.iatserv.com/",
    "https://reliable.iatserv.com/",
    "https://pnc.dxresults.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/modal.css",
        "css/content_prlss",
        "css/content_rr.css",
        "css/content_pd.css",
        "js/pcx/pcx_controller.js",
        "js/lims/dxresults.js",
        "js/lims/iatserv.js",
        "js/labs/lab_pl.js",
        "js/labs/lab_rr.js",
        "js/labs/lab_pd.js",
        "js/pcx/qa_manager.js"
      ],
      "matches": [
        "https://prince.iatserv.com/*",
        "https://reliable.iatserv.com/*",
        "https://pnc.dxresults.com/*"
      ]
    }
  ]
}
